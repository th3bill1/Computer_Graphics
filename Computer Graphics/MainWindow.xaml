<Window x:Class="Computer_Graphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Computer_Graphics"
        mc:Ignorable="d"
        Title="Image Editor" Height="600" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation= "Horizontal" HorizontalAlignment= "Center" Margin= "10" >
                <Button Content= "Load Image" Click= "LoadImage_Click" Margin= "5" />
                <Button Content= "Save Image" Click= "SaveImage_Click" Margin= "5" />
                <Button Content= "Reset Image" Click= "ResetImage_Click" Margin= "5" />
            </StackPanel>
            <Image Name= "ImageDisplay" Stretch= "Uniform" HorizontalAlignment= "Center" VerticalAlignment= "Center" />
        </DockPanel>
    </Grid>
</Window>