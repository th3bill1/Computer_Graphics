<Window x:Class="Computer_Graphics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Computer_Graphics"
        mc:Ignorable="d"
        Title="Image Editor" Height="600" Width="800">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" Click= "LoadImage_Click"/>
                    <MenuItem Header="_Reset" Click= "ResetImage_Click"/>
                    <MenuItem Header="_Save" Click= "SaveImage_Click"/>
                </MenuItem>
                <MenuItem Header="FunctionFilters">
                    <MenuItem Header="_Inversion" Click="ApplyInversion_Click"/>
                    <MenuItem Header="_Brightness" Click="ApplyBrightnessCorrection_Click"/>
                    <MenuItem Header="_Contrast" Click="ApplyContrastEnhancement_Click"/>
                    <MenuItem Header="_Gamma" Click="ApplyGammaCorrection_Click"/>
                </MenuItem>
                <MenuItem Header="ConvolutionFilters">
                    <MenuItem Header="Blur" Click="ApplyBlur_Click"/>
                    <MenuItem Header="GaussianBlur" Click="ApplyGaussianBlur_Click"/>
                    <MenuItem Header="Sharpen" Click="ApplySharpen_Click"/>
                    <MenuItem Header="Edge detection" Click="ApplyEdgeDetection_Click"/>
                    <MenuItem Header="Emboss" Click="ApplyEmboss_Click"/>
                </MenuItem>
            </Menu>
            <Image Name= "ImageDisplay" Stretch= "Uniform" HorizontalAlignment= "Center" VerticalAlignment= "Center" />
        </DockPanel>
    </Grid>
</Window>