<Window x:Class="Computer_Graphics.UniformQuantizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Uniform Quantization" Height="220" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Red Divisions:" VerticalAlignment="Center"/>
        <TextBox Name="RedDivBox" Grid.Row="0" Width="100" HorizontalAlignment="Right"/>

        <TextBlock Text="Green Divisions:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Name="GreenDivBox" Grid.Row="1" Width="100" HorizontalAlignment="Right"/>

        <TextBlock Text="Blue Divisions:" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox Name="BlueDivBox" Grid.Row="2" Width="100" HorizontalAlignment="Right"/>

        <Button Content="Apply" Grid.Row="3" Click="ApplyButton_Click" Width="80" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Window>
