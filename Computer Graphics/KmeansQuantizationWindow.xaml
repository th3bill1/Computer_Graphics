<Window x:Class="Computer_Graphics.KMeansQuantizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="K-Means Quantization" Height="150" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Number of Clusters (K):" VerticalAlignment="Center"/>
        <TextBox Name="NumClustersBox" Grid.Row="0" Width="100" HorizontalAlignment="Right"/>

        <Button Content="Apply" Grid.Row="1" Click="ApplyButton_Click" Width="80" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Window>
